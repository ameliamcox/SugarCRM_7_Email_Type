<div class="control-group email">
    <input type="text" class="existingAddress" style="width:92%" {{#if max_length}} maxlength="{{max_length}}"{{/if}} placeholder="{{str "LBL_EMAIL_TITLE"}}" value="{{email_address}}">
    <div class="btn-toolbar prevent-mousedown" style="width:40%">
        <div class="btn-group" data-toggle="buttons-checkbox" style="margin: 0px 0px 0px 80px">
            <button type="button" class="{{#if primary_address}}active {{/if}}is_primary btn btn-edit" data-emailproperty="primary_address" rel="tooltip" title="{{str "LBL_EMAIL_PRIMARY"}}" style="height:25px; width:25px">
		<i class="fa fa-star fa-sm"></i></button>

            <button type="button" class="{{#if business_email}}active {{/if}} btn btn-edit" data-emailproperty="business_email" rel="tooltip" title="{{str "LBL_BUSINESS_EMAIL"}}" style="height:25px; width:25px">
		<i class="fa fa-briefcase fa-sm"></i></button>
            <button type="button" class="{{#if personal_email}}active {{/if}} btn btn-edit" data-emailproperty="personal_email" rel="tooltip" title="{{str "LBL_PERSONAL_EMAIL"}}" style="height:25px; width:25px">
		<i class="fa fa-home fa-sm"></i></button>
            <button type="button" class="{{#if opt_out}}active {{/if}}btn btn-edit" data-emailproperty="opt_out" rel="tooltip" title="{{str "LBL_EMAIL_OPT_OUT"}}" style="height:25px; width:25px">
		<i class="fa fa-ban fa-sm"></i></button>
            <button type="button" class="{{#if invalid_email}}active {{/if}}btn btn-edit" rel="tooltip" data-emailproperty="invalid_email" title="{{str "LBL_EMAIL_INVALID"}}" style="height:25px; width:25px">
		<i class="fa fa-exclamation-circle fa-sm"></i></button>
        </div>
        <div class="btn-group prevent-mousedown">
            <a href="javascript:void(0)" class="btn removeEmail" rel="tooltip" title="{{str "LBL_REMOVE"}}" style="height:15px; width:15px"><i class="fa fa-minus fa-sm"></i></a>
        </div>
    </div>
</div>
